{
  "designSystemProfile": {
    "name": "Aurum Finance",
    "description": "A design system for a modern financial application, characterized by a dark theme, vibrant accent colors, and clean, card-based layouts. It prioritizes data visualization and clarity.",
    "theme": "dark",
    "palette": {
      "background": {
        "primary": "#000000",
        "secondary": "#1C1C1E"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#8A8A8E",
        "tertiary": "#636366"
      },
      "accent": {
        "primary": "#A855F7",
        "secondary": "#3B82F6",
        "tertiary": "#F97316"
      },
      "semantic": {
        "success": "#34C759",
        "error": "#FF3B30",
        "warning": "#FF9500"
      },
      "greyscale": {
        "white": "#FFFFFF",
        "lightGray": "#E5E5EA",
        "mediumGray": "#8A8A8E",
        "darkGray": "#3A3A3C",
        "offBlack": "#1C1C1E",
        "black": "#000000"
      }
    },
    "typography": {
      "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
      "styles": {
        "display": {
          "fontSize": "2.5rem",
          "fontWeight": 700,
          "lineHeight": "1.2"
        },
        "heading1": {
          "fontSize": "1.75rem",
          "fontWeight": 600,
          "lineHeight": "1.3"
        },
        "heading2": {
          "fontSize": "1.25rem",
          "fontWeight": 600,
          "lineHeight": "1.4"
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": 400,
          "lineHeight": "1.5"
        },
        "subheading": {
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "lineHeight": "1.4"
        },
        "caption": {
          "fontSize": "0.75rem",
          "fontWeight": 400,
          "color": "text.secondary",
          "lineHeight": "1.3"
        }
      }
    },
    "layout": {
      "containerPadding": "16px",
      "gridGap": "16px"
    },
    "spacing": {
      "baseUnit": 4,
      "scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "xxl": "48px"
      }
    },
    "borderRadius": {
      "sm": "4px",
      "md": "8px",
      "lg": "16px",
      "xl": "24px",
      "full": "9999px"
    },
    "iconography": {
      "style": "filled",
      "size": "24px",
      "containerShape": "rounded-square",
      "containerPadding": "8px"
    },
    "components": {
      "card": {
        "backgroundColor": "background.secondary",
        "borderRadius": "borderRadius.lg",
        "padding": "spacing.md",
        "shadow": "none",
        "border": "1px solid #3A3A3C"
      },
      "creditCard": {
        "extends": "card",
        "gradient": "linear-gradient(to right, #3B82F6, #6D28D9)",
        "borderRadius": "borderRadius.md",
        "aspectRatio": "1.586",
        "textColor": "text.primary"
      },
      "button": {
        "baseStyle": {
          "borderRadius": "borderRadius.full",
          "padding": "12px 24px",
          "fontSize": "typography.styles.subheading.fontSize",
          "fontWeight": 600,
          "border": "none"
        },
        "variants": {
          "primary": {
            "backgroundColor": "accent.primary",
            "color": "text.primary"
          },
          "secondary": {
            "backgroundColor": "greyscale.darkGray",
            "color": "text.primary"
          }
        }
      },
      "transactionItem": {
        "layout": "flex",
        "alignItems": "center",
        "gap": "spacing.md",
        "padding": "12px 0"
      },
      "donutChart": {
        "trackColor": "greyscale.darkGray",
        "strokeWidth": 20,
        "segmentColors": [
          "accent.primary",
          "accent.secondary",
          "accent.tertiary"
        ],
        "center": {
          "layout": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "justifyContent": "center"
        }
      },
      "barChart": {
        "barColor": "accent.primary",
        "barColorSecondary": "accent.secondary",
        "backgroundColor": "transparent",
        "borderRadius": "borderRadius.sm",
        "gridLineColor": "greyscale.darkGray",
        "axisLabelColor": "text.secondary"
      },
      "navigation": {
        "top": {
          "layout": "flex",
          "justifyContent": "space-between",
          "alignItems": "center",
          "padding": "12px 16px",
          "iconSize": "24px"
        },
        "bottom": {
          "backgroundColor": "background.secondary",
          "padding": "8px 16px",
          "borderTop": "1px solid #3A3A3C",
          "iconColor": "text.secondary",
          "activeIconColor": "accent.primary"
        }
      }
    }
  }
}
